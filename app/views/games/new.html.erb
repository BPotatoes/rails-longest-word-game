<h1>Games#new</h1>
<p>Find me in app/views/games/new.html.erb</p>

<h2>Be fast ! Find a world</h2>
<ul><% @letters.each do |letter| %>
   <li><%=letter %> </li>
<% end %>
</ul>

<h3>What is the longest world you can find ? </h3>

<form action="/score" method="post" data-turbo="false">
  <input type="text" name="word" placeholder="Word ?">
  <input type="submit">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters.join("") %>
</form>
